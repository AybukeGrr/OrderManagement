@model UpdateTestimonialDto
@{
    ViewData["Title"] = "UpdateTestimonial";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<div class="content">
    <div class="container-fluid">
        <h4 class="page-title">Müşteri Yorum İşlemleri</h4>
        <div class="row">
            <div class="col-md-12">
                <form method="post">
                    <div class="card">
                        <div class="card-header">
                            <div class="card-title">Yeni Müşteri Yorum Girişi</div>
                        </div>
                        <input type="hidden" asp-for="TestimonialID"/>
                        <div class="card-body">
                            <div class="form-group">
                                <label for="name">Müşterini Adını Giriniz</label>
                                <input type="text" class="form-control" asp-for="Name" id="name">
                            </div>
                        </div>
                        <div class="card-body">
                            <div class="form-group">
                                <label for="title">Müşteri Ünvanını Giriniz</label>
                                <input type="text" class="form-control" asp-for="Title" id="title">
                            </div>
                        </div>
                        <div class="card-body">
                            <div class="form-group">
                                <label for="comment">Müşteri Yorumu Giriniz</label>
                                <input type="text" class="form-control" asp-for="Comment" id="comment">
                            </div>
                        </div>
                        <div class="card-body">
                            <div class="form-group">
                                <label for="url">Müşteri Resim Dosya Yolunu Giriniz</label>
                                <input type="text" class="form-control" asp-for="ImageUrl" id="url">
                            </div>
                        </div>
                        <div class="card-action">
                            <button class="btn btn-primary">Yorumu Güncelle</button>
                        </div>
                    </div>
                </form>
            </div>
        </div>s
    </div>
</div>

