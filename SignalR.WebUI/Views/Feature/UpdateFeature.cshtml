@model UpdateFeatureDto
@{
    ViewData["Title"] = "UpdateFeature";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<div class="content">
    <div class="container-fluid">
        <h4 class="page-title">Öne Çıkan Alan İşlemleri</h4>
        <div class="row">
            <div class="col-md-12">
                <form method="post">
                    <div class="card">
                        <div class="card-header">
                            <div class="card-title">Yeni Öne Çıkan Alan Girişi</div>
                        </div>
                        <input type="hidden" asp-for="FeatureID"/>
                        <div class="card-body">
                            <div class="form-group">
                                <label for="title1">Birinci Başlığı Giriniz</label>
                                <input type="text" class="form-control" asp-for="Title1" id="title1">
                            </div>
                        </div>
                        <div class="card-body">
                            <div class="form-group">
                                <label for="title2">İkinci Başlığı Giriniz</label>
                                <input type="text" class="form-control" asp-for="Title2" id="title2">
                            </div>
                        </div>
                        <div class="card-body">
                            <div class="form-group">
                                <label for="title3">Üçüncü Başlığı Giriniz</label>
                                <input type="text" class="form-control" asp-for="Title3" id="title3">
                            </div>
                        </div>
                        <div class="card-body">
                            <div class="form-group">
                                <label for="description1">Birinci Açıklamayı Giriniz</label>
                                <textarea rows="5" class="form-control" asp-for="Description1" id="description1"></textarea>
                            </div>
                        </div>
                        <div class="card-body">
                            <div class="form-group">
                                <label for="description2">İkinci Açıklamayı Giriniz</label>
                                <textarea rows="5" class="form-control" asp-for="Description2" id="description2"></textarea>
                            </div>
                        </div>
                        <div class="card-body">
                            <div class="form-group">
                                <label for="description3">Üçüncü Açıklamayı Giriniz</label>
                                <textarea rows="5" class="form-control" asp-for="Description3" id="description3"></textarea>
                            </div>
                        </div>
                        <div class="card-action">
                            <button class="btn btn-primary">Öne Çıkan Alanları Güncelle</button>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

